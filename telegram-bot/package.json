{
  "name": "crypto-clicker-bot",
  "version": "1.0.0",
  "main": "out/server.js",
  "scripts": {
    "dev": "NODE_ENV=local tsx watch src/server.ts",
    "build": "tsc",
    "start": "node out/server.js",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "docker:build": "docker build -t crypto-clicker-bot .",
    "docker:run": "docker run --env-file .env -p 3000:3000 crypto-clicker-bot",
    "prettier": "prettier . --write --ignore-path .eslintignore"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "grammy": "^1.30.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
